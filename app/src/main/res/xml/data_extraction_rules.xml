<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from backup -->
        <exclude domain="sharedpref" path="firebase_analytics.xml"/>
        <exclude domain="sharedpref" path="google_sdk_app_id.xml"/>
        <exclude domain="sharedpref" path="com.google.android.gms.appid.xml"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include app data for device transfer -->
        <include domain="file" path="."/>
        <include domain="database" path="."/>
    </device-transfer>
</data-extraction-rules>